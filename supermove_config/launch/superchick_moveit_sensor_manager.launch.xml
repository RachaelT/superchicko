<launch>
	<!-- Author: Olalekan Ogunmolu.
		 Date: October 01, 2016 -->

	<node name="super_listener" pkg="superchick_cloud" type="cloud.py" >
		<param name="rate" type="int" value="30" />
		<!-- <remap from="/vicon/Superdude/head" to="/vicon/head_temp" /> -->
	</node>	
	
	<!-- We use throttle to slow down the publishing rate of vicon messages
	otherwise we get transform delays -->
	<node name="topic_tools" pkg="topic_tools" type="throttle" args="messages /vicon/Superdude/head 28 /vicon/head_transform" output="screen" >
	</node>

	<node name="topic_tools_markers" pkg="topic_tools" type="throttle" args="messages /vicon/markers 28 /vicon/delayed_markers" output="screen" >
	</node>

	<rosparam command="load" file="$(find supermove_config)/config/vicon.yaml" />

</launch>
