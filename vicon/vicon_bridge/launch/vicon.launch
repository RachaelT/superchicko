<launch>	
	<arg name="subject_name"    default="Superdude" type="str" />
	<arg name="segment_name"    default="head" type="str"/>	
	<arg name="listen"         default="true" type="bool" />
	<arg name="save"   default="false" type="bool" />	
	<arg name="print"  default="false" type="bool" />
	<arg name="respawn" default="true" type="bool" />
	
	<node pkg="vicon_bridge" type="vicon_bridge" name="vicon" output="screen">
		<param name="stream_mode" value="ClientPull" type="str" />
		<param name="datastream_hostport" value="192.168.1.2:801" type="str" />
		<param name="tf_ref_frame_id" value="/world" type="str" />
	</node>

	<group if="$(arg listen)">
		<node pkg="vicon_listener" type="vicon_listener" name="vicon_listener" output="screen"  args="$(arg subject_name) $(arg segment_name)" respawn="true">		
			<param name="save" value="$(arg save)" type="bool"/>
			<param name="print" value="$(arg print)" type="bool"/>
		</node>
	</group>
</launch>
